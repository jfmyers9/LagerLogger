<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="2"
    android:versionName="1.0.0"
    package="com.jfmyers9">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".LagerLoggerApplication"
        android:theme="@android:style/Theme.Holo.Light"
        android:debuggable="true"
        android:label="@string/app_name"
        android:icon="@drawable/lager_logger_icon">

        <activity
            android:name=".activity.DrawerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AddLagerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ViewLagerActivity" />

    </application>
</manifest>
